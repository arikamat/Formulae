        <activity android:name=".physicsFront.Physics2.InelasticCollisionsFront" />
        <activity android:name=".physicsFront.Physics2.ElasticCollisionsFront" />
        <activity android:name=".physicsFront.Physics2.KinematicsFront" />
        <activity android:name=".physicsFront.Physics2.Momentum" />
        <activity android:name=".physicsFront.Physics2.FreeFallFront" />
        <activity android:name=".physicsFront.Physics2.ForceAccelerationFront" />
        <activity android:name=".physicsFront.Physics1" />
